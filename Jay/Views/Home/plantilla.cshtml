                                    <div class="mr-2">
                                        <img class="rounded-circle" width="40" src="@com.User.ProfilePicture" alt="">
                                    </div>
                                    <div class="ml-2">
                                        <div class="h6 m-0">@post.User.Name @post.User.LastName <small>- Hace 5 minutos</small></div>
                                        <div class="h7">@com.Text</div>
                                    </div>
                                </div>
